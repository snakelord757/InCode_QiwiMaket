<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/useful_item_icon"
        android:layout_width="@dimen/useful_item_icon_size"
        android:layout_height="@dimen/useful_item_icon_size"
        android:layout_marginStart="@dimen/default_side_margin_land"
        android:src="@drawable/ic_android_gray_24dp"
        android:tint="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/useful_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/useful_item_title_margin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/useful_item_title_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/useful_item_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Название услуги" />

    <ImageView
        android:id="@+id/useful_item_chevron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_side_margin_land"
        android:src="@drawable/ic_chevron_right_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>